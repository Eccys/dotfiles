/* Main Config Rofi Theme */

@import "~/.config/rofi/config.rasi"  

/* ---- Window ---- */
window {
  width: 45%;
  height: inherit;
}

/* ---- Mainbox ---- */
mainbox {
  children:
    [ "inputbar", "listview"];
}

/* ---- Entry input ---- */
entry {
  expand: true;
  placeholder: " ⬇️  Select Which Rofi Theme wanted to apply";
}

/* ---- Listview ---- */
listview {
  columns: 2;
  lines: 7;
  fixed-height: false;
  margin: 0px;
  scrollbar: true;
}

/* ---- Elements ---- */
element-icon {
  size: 0%;
}
element-text {
  horizontal-align: 0.0;
  vertical-align: 0.0;
  margin: 0px;
}
